---
import Base from '../../layouts/Base.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Base title={post.data.title}>
  <article>
    <a href="/" class="text-sm text-blue-600 hover:text-blue-800 transition-colors mb-6 inline-block">
      &larr; Tilbage til oversigt
    </a>

    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-3">{post.data.title}</h1>
      <div class="flex items-center gap-3 text-sm text-gray-500">
        <span>{post.data.author}</span>
        <span>&middot;</span>
        <time datetime={post.data.date.toISOString()}>
          {post.data.date.toLocaleDateString('da-DK', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </time>
      </div>
    </header>

    <div class="prose prose-gray max-w-none">
      <Content />
    </div>
  </article>
</Base>
