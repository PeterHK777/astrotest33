---
import Base from '../layouts/Base.astro';
---

<Base title="Kontakt - Fysioterapi Østerbro">
  <section class="max-w-7xl mx-auto px-6 py-16">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">

      <!-- Formular -->
      <div>
        <h1 class="text-3xl font-bold mb-2">Kontakt os</h1>
        <p class="text-gray-600 mb-8">Udfyld formularen, så vender vi tilbage hurtigst muligt.</p>

        <form id="contact-form" class="space-y-5">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Navn</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full border border-gray-300 rounded-lg px-4 py-2.5 text-sm focus:outline-none focus:ring-2 focus:ring-teal-400 focus:border-transparent"
                placeholder="Dit fulde navn"
              />
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Telefon</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full border border-gray-300 rounded-lg px-4 py-2.5 text-sm focus:outline-none focus:ring-2 focus:ring-teal-400 focus:border-transparent"
                placeholder="12 34 56 78"
              />
            </div>
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">E-mail</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full border border-gray-300 rounded-lg px-4 py-2.5 text-sm focus:outline-none focus:ring-2 focus:ring-teal-400 focus:border-transparent"
              placeholder="din@email.dk"
            />
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Emne</label>
            <select
              id="subject"
              name="subject"
              class="w-full border border-gray-300 rounded-lg px-4 py-2.5 text-sm focus:outline-none focus:ring-2 focus:ring-teal-400 focus:border-transparent"
            >
              <option value="">Vælg emne</option>
              <option value="booking">Booking af tid</option>
              <option value="fysioterapi">Fysioterapi</option>
              <option value="sportsfysioterapi">Sportsfysioterapi</option>
              <option value="akut">Akut behandling</option>
              <option value="andet">Andet</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Besked</label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full border border-gray-300 rounded-lg px-4 py-2.5 text-sm focus:outline-none focus:ring-2 focus:ring-teal-400 focus:border-transparent resize-none"
              placeholder="Skriv din besked her..."
            ></textarea>
          </div>

          <button
            type="submit"
            class="bg-teal-400 hover:bg-teal-500 text-white font-semibold px-8 py-3 rounded-full transition-colors"
          >
            Send besked
          </button>
        </form>

        <!-- Succes-besked (skjult som standard) -->
        <div id="success-msg" class="hidden mt-6 bg-teal-50 border border-teal-200 text-teal-800 rounded-lg p-4 text-sm">
          Tak for din besked! Vi vender tilbage hurtigst muligt.
        </div>
      </div>

      <!-- Info -->
      <div class="space-y-8">
        <div>
          <h2 class="text-xl font-semibold mb-3">Klinikken</h2>
          <div class="space-y-3 text-gray-600 text-sm">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-teal-400 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <div>
                <p class="font-medium text-gray-800">Adresse</p>
                <p>Østerbrogade 123, 2100 København Ø</p>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-teal-400 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <div>
                <p class="font-medium text-gray-800">Telefon</p>
                <p>12 34 56 78</p>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-teal-400 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <div>
                <p class="font-medium text-gray-800">E-mail</p>
                <p>kontakt@fysioterapi-oesterbro.dk</p>
              </div>
            </div>
          </div>
        </div>

        <div>
          <h2 class="text-xl font-semibold mb-3">Åbningstider</h2>
          <div class="text-sm text-gray-600 space-y-1">
            <div class="flex justify-between max-w-xs">
              <span>Mandag - Fredag</span>
              <span class="font-medium text-gray-800">08:00 - 18:00</span>
            </div>
            <div class="flex justify-between max-w-xs">
              <span>Lørdag</span>
              <span class="font-medium text-gray-800">09:00 - 14:00</span>
            </div>
            <div class="flex justify-between max-w-xs">
              <span>Søndag</span>
              <span class="font-medium text-gray-800">Lukket</span>
            </div>
          </div>
        </div>

        <!-- Kort placeholder -->
        <div class="rounded-xl overflow-hidden h-56 bg-gray-100">
          <iframe
            src="https://www.google.com/maps?q=Østerbrogade+123,+2100+København&output=embed"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <script>
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const successMsg = document.getElementById('success-msg')!;

    form.addEventListener('submit', (e) => {
      e.preventDefault();
      form.classList.add('hidden');
      successMsg.classList.remove('hidden');
    });
  </script>
</Base>
