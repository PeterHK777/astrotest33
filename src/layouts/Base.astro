---
import '../styles/global.css';
import NakkeBeregner from '../components/NakkeBeregner.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;

const navLinks = [
  { label: 'Forside', href: '/' },
  { label: 'Ydelser', href: '#ydelser' },
  { label: 'Profil', href: '#profil' },
  { label: 'Priser', href: '#priser' },
  { label: 'Blog', href: '/blog' },
  { label: 'Galleri', href: '#galleri' },
];
---

<html lang="da">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-white text-gray-900 min-h-screen" style="font-family: system-ui, -apple-system, sans-serif;">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm sticky top-0 z-40">
      <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href="/" class="text-xl font-bold text-gray-900" style="font-family: 'Libre Baskerville', serif;">
          Tækkekollektivet
        </a>

        <!-- Desktop nav -->
        <div class="hidden lg:flex items-center gap-8">
          {navLinks.map((link) => (
            <a
              href={link.href}
              class="text-sm text-gray-700 hover:text-[#C57908] transition-colors"
            >
              {link.label}
            </a>
          ))}
          <a
            href="/kontakt"
            class="bg-[#C57908] hover:bg-[#a56507] text-white text-sm font-medium px-5 py-2.5 rounded transition-colors"
          >
            Kontakt
          </a>
        </div>

        <!-- Mobile hamburger -->
        <button id="mobile-menu-btn" class="lg:hidden text-gray-700">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Mobile menu -->
      <div id="mobile-menu" class="hidden lg:hidden border-t border-gray-100 px-6 py-4 space-y-3">
        {navLinks.map((link) => (
          <a href={link.href} class="block text-sm text-gray-700 hover:text-[#C57908]">{link.label}</a>
        ))}
        <a href="/kontakt" class="block bg-[#C57908] text-white text-sm font-medium px-5 py-2.5 rounded text-center">
          Kontakt
        </a>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-400">
      <div class="max-w-7xl mx-auto px-6 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
          <!-- Brand -->
          <div>
            <h3 class="text-white text-lg font-bold mb-2" style="font-family: 'Libre Baskerville', serif;">
              Tækkekollektivet
            </h3>
            <p class="text-sm italic">Tradition, kvalitet og godt håndværk</p>
            <div class="flex gap-3 mt-4">
              <a href="#" class="text-gray-400 hover:text-white transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
              </a>
              <a href="#" class="text-gray-400 hover:text-white transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
              </a>
            </div>
          </div>

          <!-- Links -->
          <div>
            <h4 class="text-white font-semibold text-sm mb-3">Områder</h4>
            <ul class="space-y-2 text-sm">
              <li><a href="#" class="hover:text-white transition-colors">Sjælland</a></li>
              <li><a href="#" class="hover:text-white transition-colors">Nordsjælland</a></li>
              <li><a href="#" class="hover:text-white transition-colors">Vestsjælland</a></li>
              <li><a href="#" class="hover:text-white transition-colors">Sydsjælland</a></li>
            </ul>
          </div>

          <!-- Navigation -->
          <div>
            <h4 class="text-white font-semibold text-sm mb-3">Navigation</h4>
            <ul class="space-y-2 text-sm">
              <li><a href="/" class="hover:text-white transition-colors">Forside</a></li>
              <li><a href="#ydelser" class="hover:text-white transition-colors">Ydelser</a></li>
              <li><a href="#priser" class="hover:text-white transition-colors">Priser</a></li>
              <li><a href="/kontakt" class="hover:text-white transition-colors">Kontakt</a></li>
            </ul>
          </div>

          <!-- Kontakt -->
          <div>
            <h4 class="text-white font-semibold text-sm mb-3">Kontakt</h4>
            <ul class="space-y-2 text-sm">
              <li>Tlf: <a href="tel:+4551522623" class="hover:text-white transition-colors">51 52 26 23</a></li>
              <li><a href="mailto:info@taekkekollektivet.dk" class="hover:text-white transition-colors">info@taekkekollektivet.dk</a></li>
            </ul>
            <a href="tel:+4589876463" class="inline-block mt-4 bg-red-600 hover:bg-red-700 text-white text-xs font-semibold px-4 py-2 rounded transition-colors">
              Få hjælp nu: 89 87 64 63
            </a>
          </div>
        </div>

        <div class="border-t border-gray-800 pt-6 text-sm text-center">
          &copy; {new Date().getFullYear()} Tækkekollektivet. Alle rettigheder forbeholdes.
        </div>
      </div>
    </footer>

    <NakkeBeregner />

    <script>
      const menuBtn = document.getElementById('mobile-menu-btn');
      const menu = document.getElementById('mobile-menu');
      menuBtn?.addEventListener('click', () => menu?.classList.toggle('hidden'));
    </script>
  </body>
</html>
